#!/usr/bin/make -f
export DH_VERBOSE=1

%:
	dh $@ --buildsystem=ruby

override_dh_install:
	dh_install
	#if is_distribution?(">= precise")
	    sed -i 's/NATIVELY_PACKAGED = .*/NATIVELY_PACKAGED = true/' debian/mizuho/usr/lib/ruby/vendor_ruby/mizuho.rb
	#endif
	sed -i 's/\/usr\/bin\/env ruby/\/usr\/bin\/ruby/' debian/mizuho/usr/bin/mizuho
